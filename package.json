{
  "name": "image-viewer-for-yugioh-card-wiki",
  "version": "0.0.1",
  "description": "Show card images on Yu-Gi-Oh! Card Wiki.",
  "main": "bundle.js",
  "scripts": {
    "build": "browserify src/app.js -o dist/bundle.js",
    "test": "npm run lint && karma start",
    "lint": "eslint src test",
    "watch": "watchify src/app.js -o dist/bundle.js -d -v",
    "zip": "npm run build && zip -r dist.zip dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itiut/image-viewer-for-yugioh-card-wiki"
  },
