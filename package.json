  "bugs": {
    "url": "https://github.com/itiut/image-viewer-for-yugioh-card-wiki/issues"
  },
  "homepage": "https://github.com/itiut/image-viewer-for-yugioh-card-wiki",
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.4.0",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-import": "^1.14.0",
    "karma": "^1.2.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "mocha": "^3.0.2",
    "watchify": "^3.7.0"
  }
